# ========================================
# OmniCRM God Mode - Environment Variables
# ========================================

# Application
APP_NAME="OmniCRM God Mode"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false
PORT=8000

# Database
DATABASE_URL="postgresql://user:password@hostname:5432/neurocrm"

# JWT Authentication
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Cache
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=3600

# AI Providers (Choose one or multiple)
# OpenAI
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o"

# Anthropic Claude
ANTHROPIC_API_KEY="sk-ant-..."
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# Groq (Free & Fast!)
GROQ_API_KEY="gsk_..."
GROQ_MODEL="llama-3.2-90b-text-preview"

# Google Gemini (Free Tier)
GOOGLE_AI_API_KEY="AIza..."
GEMINI_MODEL="gemini-2.0-flash-exp"

# Ollama (Local & Private)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:7b"

# MiniMax (Chinese, Excellent)
MINIMAX_API_KEY="..."
MINIMAX_GROUP_ID="..."

# Supabase (Real-time Database)
SUPABASE_URL="https://xxx.supabase.co"
SUPABASE_KEY="eyJ..."
SUPABASE_JWT_SECRET="..."

# Email (FastAPI-Mail)
MAIL_USERNAME="your-email@example.com"
MAIL_PASSWORD="your-app-password"
MAIL_FROM="noreply@omnicrm.com"
MAIL_PORT=587
MAIL_SERVER="smtp.gmail.com"
MAIL_STARTTLS=true
MAIL_SSL_TLS=false

# Monitoring (Sentry)
SENTRY_DSN="https://xxx@sentry.io/xxx"

# Facebook Ads (Optional)
FACEBOOK_APP_ID="..."
FACEBOOK_APP_SECRET="..."
FACEBOOK_ACCESS_TOKEN="..."

# Twilio (Voice/SMS) (Optional)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1..."

# WhatsApp Business API (Optional)
WHATSAPP_API_KEY="..."
WHATSAPP_PHONE_NUMBER_ID="..."

# Stripe (Payment) (Optional)
STRIPE_API_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# CORS
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
